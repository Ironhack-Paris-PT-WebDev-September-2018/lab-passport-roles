<div class="container">
  <div class="row">
    <h3 class="text-muted">Add a new course:</h3>
  <section class="col-md-6 col-md-offset-3">
    <form class="creation-form" action="/courses" method="POST" id="form-container">
      <% if (typeof(message) != "undefined") { %>
        <div class="error-message"><%= message %></div>
      <% } %>
      <div class="">
        <label for="name">Name</label>
        <input type="text" name="name" >
      </div>
       <div class="">
      <label for="startingDate">Begginning:</label>
        <input type="date" name="startingDate" >
      </div>%>
      <div class="">
        <label for="endDate">Ending</label>
        <input type="date" name="endDate" >
      </div>
      <div class="">
        <label for="level">Level</label>
        <select class="form-control medium" name="level">
          <option value="Beginner">Beginner</option>
          <option value="Advanced">Advanced</option>
        </select>
      </div>
      <div class="">
        <label for="available">Availability</label>
        <select class="form-control medium" name="available">
          <option value="true">Yes</option>
          <option value="false">Not yet</option>
        </select>
      </div>
      <button>Create Course</button>
  </div>
</div>
